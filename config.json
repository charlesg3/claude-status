{
  "project_name": "claude-status",
  "config_dir": "~/.config/claude-status",
  "state_dir": "/tmp",
  "log": {
    "file": "~/.local/share/claude-status/claude-status.log",
    "max_lines": 500
  },
  "notifications": {
    "sound": {
      "enabled": true,
      "volume": 0.7,
      "path": null,
      "path_overrides": {
        "long_running": null,
        "error": null
      },
      "on_long_running": true,
      "on_error": false,
      "long_running_threshold": null
    },
    "os": {
      "enabled": true,
      "on_long_running": true,
      "on_error": true,
      "long_running_threshold": null
    },
    "vim": {
      "enabled": true,
      "on_long_running": true,
      "on_error": true,
      "long_running_threshold": null
    }
  },
  "long_running": {
    "threshold_seconds": 120
  },
  "statusline": {
    "enabled": true,
    "layout": [
      "state", "directory", "branch", "git_status",
      "spacer",
      "context", "cost", "duration"
    ],
